{
	"name": "@acdh-oeaw/viecpro-frontend",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">=18",
		"npm": ">=9"
	},
	"packageManager": "npm@9.5.1",
	"scripts": {
		"build": "vite build",
		"dev": "vite",
		"format:check": "prettier . --cache --check --ignore-path ./.gitignore",
		"format:fix": "npm run format:check -- --write",
		"lint:check": "run-p lint:*:check",
		"lint:fix": "run-p lint:*:fix",
		"lint:code:check": "eslint . --cache --ext .cjs,.mjs,.ts,.vue --ignore-path ./.gitignore",
		"lint:code:fix": "npm run lint:code:check -- --fix",
		"lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --allow-empty-input --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "npm run lint:styles:check -- --fix",
		"prepare": "run-s setup",
		"preview": "vite preview",
		"setup": "simple-git-hooks || exit 0",
		"start": "nuxt preview",
		"test": "exit 0",
		"types:check": "vue-tsc --noEmit",
		"validate": "run-s format:check lint:check types:check test"
	},
	"dependencies": {
		"@fontsource/roboto-flex": "^4.5.5",
		"@headlessui/vue": "^1.7.13",
		"@vueuse/core": "^10.0.2",
		"pinia": "^2.0.34",
		"typesense-instantsearch-adapter": "^2.6.0",
		"vue": "^3.2.47",
		"vue-i18n": "^9.3.0-beta.11",
		"vue-instantsearch": "^4.8.10",
		"vue-router": "^4.1.6"
	},
	"devDependencies": {
		"@intlify/unplugin-vue-i18n": "^0.10.0",
		"@types/node": "^18.15.11",
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.59.0",
		"@vitejs/plugin-vue": "^4.1.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint-plugin-tailwindcss": "^3.11.0",
		"eslint-plugin-vue": "^9.11.0",
		"eslint-plugin-vuejs-accessibility": "^2.1.0",
		"lint-staged": "^13.2.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.22",
		"postcss-html": "^1.5.0",
		"prettier": "^2.8.7",
		"simple-git-hooks": "^2.8.1",
		"stylelint": "^15.5.0",
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-standard": "^33.0.0",
		"tailwindcss": "^3.3.1",
		"typescript": "^5.0.4",
		"vite": "^4.2.1",
		"vue-tsc": "^1.2.0"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es2021": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:import/recommended",
			"plugin:import/typescript",
			"prettier",
			"plugin:eslint-plugin-tailwindcss/recommended"
		],
		"overrides": [
			{
				"files": [
					"*.cjs"
				],
				"rules": {
					"@typescript-eslint/no-var-requires": "off"
				}
			},
			{
				"files": [
					"*.vue"
				],
				"extends": [
					"plugin:vue/vue3-essential",
					"plugin:vuejs-accessibility/recommended",
					"prettier"
				],
				"parserOptions": {
					"parser": "@typescript-eslint/parser"
				},
				"rules": {
					"vuejs-accessibility/label-has-for": [
						"error",
						{
							"required": {
								"some": [
									"nesting",
									"id"
								]
							}
						}
					],
					"vuejs-accessibility/no-autofocus": [
						"error",
						{
							"ignoreNonDOM": true
						}
					],
					"vuejs-accessibility/no-onchange": "off",
					"vuejs-accessibility/no-redundant-roles": [
						"error",
						{
							"ul": [
								"list"
							],
							"ol": [
								"list"
							]
						}
					]
				}
			}
		],
		"parserOptions": {
			"ecmaVersion": 2021,
			"extraFileExtensions": [
				".vue"
			],
			"project": "./tsconfig.json"
		},
		"plugins": [
			"simple-import-sort"
		],
		"reportUnusedDisableDirectives": true,
		"root": true,
		"rules": {
			"eqeqeq": [
				"error",
				"always",
				{
					"null": "ignore"
				}
			],
			"no-console": [
				"warn",
				{
					"allow": [
						"warn",
						"error"
					]
				}
			],
			"no-implicit-coercion": "error",
			"no-param-reassign": "error",
			"no-restricted-globals": [
				"error",
				{
					"name": "isNaN",
					"message": "Use Number.isNaN instead."
				}
			],
			"no-throw-literal": "error",
			"@typescript-eslint/array-type": [
				"error",
				{
					"default": "generic"
				}
			],
			"@typescript-eslint/consistent-type-exports": [
				"error",
				{
					"fixMixedExportsWithInlineTypeSpecifier": true
				}
			],
			"@typescript-eslint/consistent-type-imports": [
				"error",
				{
					"fixStyle": "inline-type-imports"
				}
			],
			"@typescript-eslint/no-empty-interface": [
				"error",
				{
					"allowSingleExtends": true
				}
			],
			"@typescript-eslint/no-unnecessary-condition": "error",
			"@typescript-eslint/no-unused-vars": [
				"error",
				{
					"argsIgnorePattern": "^_",
					"varsIgnorePattern": "^_"
				}
			],
			"@typescript-eslint/sort-type-union-intersection-members": "error",
			"@typescript-eslint/switch-exhaustiveness-check": "error",
			"import/consistent-type-specifier-style": [
				"error",
				"prefer-inline"
			],
			"import/first": "error",
			"import/newline-after-import": "error",
			"import/no-anonymous-default-export": "error",
			"import/no-duplicates": "error",
			"simple-import-sort/imports": "error",
			"simple-import-sort/exports": "error"
		},
		"settings": {
			"import/parsers": {
				"@typescript-eslint/parser": [
					".ts"
				]
			},
			"import/resolver": {
				"typescript": {
					"project": "./tsconfig.json",
					"alwaysTryTypes": true
				}
			},
			"tailwindcss": {
				"config": "./tailwind.config.cjs"
			}
		}
	},
	"lint-staged": {
		"*.@(cjs|mjs|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.css": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.vue": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(cjs|css|mjs|ts|vue)": "prettier --cache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {},
			"autoprefixer": {}
		}
	},
	"prettier": {
		"$schema": "https://json.schemastore.org/prettierrc",
		"endOfLine": "lf",
		"printWidth": 100,
		"proseWrap": "always",
		"semi": true,
		"singleQuote": false,
		"tabWidth": 2,
		"trailingComma": "all",
		"useTabs": true
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-html/vue"
		],
		"reportNeedlessDisables": true,
		"rules": {
			"selector-class-pattern": null
		}
	}
}
